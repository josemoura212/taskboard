export struct Theme {
    bg: color,
    surface: color,
    text: color,
    textSubtle: color,
    border: color,
    primary: color,
    onPrimary: color,
    radius: length,
    gap: length,
    padding: length,
    shadow_color: color,
    shadow_offset_x: length,
    shadow_offset_y: length,
    shadow_blur: length,
}

